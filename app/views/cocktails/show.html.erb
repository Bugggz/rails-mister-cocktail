<h1><%= @cocktail.name %></h1>
<tr><%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %></tr>
<tr>
  <% @cocktail.doses.each do |dose| %>
  <td><%= dose.ingredient.name %></td>
  <td></td>
  <td><%= dose.description %></td>
  <td><%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %></td>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash"></i>
  <% end %>
<% end %>
<tr><%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash"></i>
</tr>
<tr><%= link_to 'Back to the bar', cocktails_path %></tr>
<% end %>
</tr>
